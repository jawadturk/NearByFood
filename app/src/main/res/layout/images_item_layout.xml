<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:clickable="true"
        android:focusable="true"
        android:elevation="3dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="false"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            >

            <com.joooonho.SelectableRoundedImageView
                android:layout_height="@dimen/card_cover_height"
                android:layout_width="match_parent"
                android:id="@+id/thumbnail"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:src="@drawable/img_place_holder"
                android:scaleType="centerCrop"
                app:sriv_left_top_corner_radius="10dp"
                app:sriv_right_top_corner_radius="10dp"
                app:sriv_left_bottom_corner_radius="10dp"
                app:sriv_right_bottom_corner_radius="10dp"
                app:sriv_border_width="0dp"
                app:sriv_border_color="#008fea"
                app:sriv_oval="false"
                />






        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>